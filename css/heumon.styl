@import './mixin'

button.green
    background: -webkit-gradient(linear, left top, left bottom, from(rgba(255, 255, 255, 0.3)), color-stop(0.5, rgba(255, 255, 255, 0.1)), color-stop(0.5, rgba(255, 255, 255, 0))), #172 !important

.bottom
  position: absolute
  left: 0
  bottom: 0
  right: 0

.event-create
  #event-data
    .radio-item
      input[type="radio"], input[type="checkbox"]
        display: none
      input:checked + label
        background-color: #AC8
      label
        padding-left: 20px
        padding-right: 20px

article
  article
    font-size: 150%
    input
      font-size: 150%
      
.event-record
  > button
    font-size: 150%
    margin-left: auto
    margin-right: auto
    width: 80%
    bottom: -20px
